{
    "GLOBAL": {
        "FILE": "$process.root",
        "FILE_UP": "$process_$systUp.root",
        "FILE_DOWN": "$process_$systDown.root",
        "HIST": "$region",
        "HIST_UP": "$region_$systup",
        "HIST_DOWN": "$region_$systdown",
        "path": "myPath"
    },
    "NAME": "SR",
    "OPTIONS": {
        "blindedFit":false,
        "blindedPlots":false,
        "plotUncerts":false,
        "plotTitles":false,
        "fitGuesses":false,
        "prerun":false,
        "year":2
    },

    "PROCESSES": {
        "data_obs": {
            "SYSTEMATICS":[],
            "SCALE": 1.0,
            "COLOR": 0,
            "TYPE": "DATA",
            "ALIAS": "data",
            "LOC": "path/FILE:HIST"
        },
        "bkg": {
            "SYSTEMATICS":["lumi","TT_xsec"],
            "SCALE": 1.5,
            "COLOR": 2,
            "TYPE": "BKG",
            "LOC": "path/FILE:HIST"
        },
        "signal": {
            "SYSTEMATICS":["lumi","TT_xsec","topsf-merged_16"],
            "SCALE": 1.0,
            "COLOR": 0,
            "TYPE": "SIGNAL",
            "LOC": "path/FILE:HIST"
        }
    },

    "REGIONS": {
        "pass": ["bkg","signal"],
        "fail": ["bkg","signal"]
    },

    "SYSTEMATICS": {
        "lumi": {
            "VAL": 1.018
        },
        "TT_xsec": {
            "VALUP": 1.20,
            "VALDOWN": 0.8
        },
        "topsf-merged_16":{
            "ALIAS": "Top3",
            "UP": "path/FILE:HIST_UP",
            "DOWN": "path/FILE:HIST_DOWN",
            "SIGMA": 1.0
        },
        "jer_16": {
            "ALIAS": "JER",
            "UP": "path/FILE_UP:HIST",
            "DOWN": "path/FILE_DOWN:HIST",
            "SIGMA": 1.0
        }
    },

    "BINNING": {
        "HELP": "The binning of the x and y axes should be configured here",
        "X": {
            "NAME": "xaxis",
            "TITLE": "X",
            "MIN": 0,
            "MAX": 24,
            "NBINS": 12,
            "SIGSTART": 14,
            "SIGEND": 16
        },
        "Y": {
            "NAME": "yaxis",
            "TITLE": "Y",
            "MIN": 0, 
            "MAX": 20,
            "NBINS": 10
        }
    }
}